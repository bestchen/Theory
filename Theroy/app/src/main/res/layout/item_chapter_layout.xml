<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/tv_downlaod_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_oval"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="下载"
        android:textColor="@color/color_cc9900"
        android:textSize="12sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_progressbar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center_horizontal"
        android:text="0%"
        android:textColor="@color/color_ffffff"
        android:textSize="12sp"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/pb_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/tv_progressbar"
        android:layout_marginTop="5dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/progress_layer_list"
        android:visibility="invisible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/tv_downlaod_label"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_book" />

    <TextView
        android:id="@+id/tv_cahpter"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_downlaod_label"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:text="第一卷"
        android:textColor="@color/color_cc9900"
        android:textSize="12sp" />

    <View
        android:id="@+id/tip"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_below="@+id/tv_cahpter"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_cicler_green"
        android:visibility="gone" />

</RelativeLayout>